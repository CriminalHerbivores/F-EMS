<?xml version="1.0" encoding="utf-8" ?>

<decorators defaultdir="/decorators">
	<decorator name="main" page="decorator.jsp">
		<pattern>/**</pattern>
	</decorator>
	
	<decorator name="non" page="nondecorator.jsp">
		<pattern>/admin/step**</pattern>
		<pattern>/course/courseAble</pattern>
		<pattern>/course/courseComplete</pattern>
		<pattern>/course/courseInterest</pattern>
		<pattern>/course/courseCredit</pattern>
		<pattern>/find_**</pattern>
		<pattern>/cssExample</pattern>
	</decorator>
		
	<excludes>
		<pattern>/admin/log**</pattern>
		<pattern>/**/menu.jsp</pattern>
		<pattern>/layout_type/login**</pattern>
		<pattern>/layout_type/access**</pattern>
		<!-- <pattern>/**/top_decorator.jsp</pattern>
		<pattern>/**/left_decorator.jsp</pattern>
		<pattern>/**/footer_decorator.jsp</pattern> -->
		
	</excludes>
	

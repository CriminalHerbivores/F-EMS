<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

    
<sqlMap namespace="Answer">

	<typeAlias alias="str" type="java.lang.String" />
	<typeAlias alias="int" type="java.lang.Integer" />
	<typeAlias alias="answerVO" type="com.uni.fems.dto.AnswerVO" />
	
<select id="getAnswer" parameterClass="answerVO" resultClass="answerVO">
	select * from answer where an_tp_no=#an_Tp_No# and an_ques_no=#an_Ques_No#
</select>

<select id="listAllAnswer" parameterClass="str" resultClass="answerVO">
	select * from answer where an_stdnt_no=#an_Stdnt_No#
</select>

<update id="insertAnswer" parameterClass="answerVO">
	insert into answer(an_ques_no,an_tp_no,an_stdnt_no,an_ans) 
	values(#an_Ques_No#,#an_Tp_No#,#an_Stdnt_No#,#an_Ans#)
</update>

<update id="deleteAnswer" parameterClass="int">
	delete from answer where an_tp_no=#an_Tp_No#
</update>

<select id="countAnswerSTD" parameterClass="int">
	select count(an_stdnt_no) from answer where an_tp_no =#an_Tp_No#
</select>

<select id="nameAnswerSTD" parameterClass="int">
	select distinct(an_stdnt_no) from answer where an_tp_no =#an_Tp_No#
</select>

</sqlMap>
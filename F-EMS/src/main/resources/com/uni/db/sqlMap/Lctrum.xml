<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
"http://ibatis.apache.org/dtd/sql-map-2.dtd">
    
<sqlMap namespace="Lctrum">
	<typeAlias alias="str" type="java.lang.String" />
	<typeAlias alias="int" type="java.lang.Integer" />
	<typeAlias alias="Lctrum" type="com.uni.fems.dto.LctrumVO" />

	<!-- 강의실 등록 -->
	<update id="insertLctrum" parameterClass="lctrum">
		insert into lctrum(lr_Lctrum_No,lr_Bd_No,lr_Floor,lr_Roomno,lr_Accept_Nmpr,lr_Useyn)
			values(#lr_Lctrum_No#,#lr_Bd_No#,#lr_Floor#,#lr_Roomno#,#lr_Accept_Nmpr#,#lr_Useyn#)
	</update>
	
	<!-- 강의실 수정 -->
	<update id="updateLctrum" parameterClass="lctrum">
		update lctrum set lr_Lctrum_No=#lr_Lctrum_No#,lr_Bd_No=#lr_Bd_No#,lr_Floor=#lr_Floor#,lr_Roomno=#lr_Roomno#,lr_Accept_Nmpr=#lr_Accept_Nmpr#,lr_Useyn=#lr_Useyn#
		where lr_Lctrum_No=#lr_Lctrum_No#
	</update>
	
	<!-- 강의실 사용안함 -->
	<update id="deleteLctrum" parameterClass="str">
   		update lctrum set lr_Useyn='n' where lr_Lctrum_No=#lr_Lctrum_No#
   </update>
	
	</sqlMap>
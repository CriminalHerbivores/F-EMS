<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
"http://ibatis.apache.org/dtd/sql-map-2.dtd">
    
<sqlMap namespace="Profsr_Subjct_Asnm">
	<typeAlias alias="str" type="java.lang.String" />
	<typeAlias alias="int" type="java.lang.Integer" />
	<typeAlias alias="asnm" type="com.uni.fems.dto.Profsr_Subjct_AsnmVO" />

	<!-- 교수 학과배정 등록 -->
	<update id="insertProfsr_Subjct_Asnm" parameterClass="asnm">
		insert into profsr_subjct_asnm(
			psa_Code,
			psa_Subjct_Code,
			psa_Profsr_No,
			psa_Dt
		)values(
			psa_seq.nextval,
			#psa_Subjct_Code#,
			#psa_Profsr_No#,
			#psa_Dt#
		)
	</update>
	
	<!-- 교수 학과배정 수정 -->
	<update id="updateProfsr_Subjct_Asnm" parameterClass="asnm">
		update profsr_subjct_asnm set 
			psa_Subjct_Code=#psa_Subjct_Code#,
			psa_Profsr_No=#psa_Profsr_No#,
			psa_Dt=#psa_Dt#
		where psa_Code=#psa_Code#
	</update>
	
	<!-- 교수 학과배정 조회 -->
	<select id="selectProfsr_Subjct_Asnm" parameterClass="str" resultClass="asnm">
		select * from profsr_subjct_asnm
		where psa_Profsr_No = #psa_Profsr_No#
	</select>
</sqlMap>
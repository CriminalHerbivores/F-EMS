<sqlMap namespace="Reqst">
	<typeAlias alias="reqst" type="com.uni.fems.dto.ReqstVO" />
	<typeAlias alias="lctre_Search" type="com.uni.fems.dto.Lctre_SearchVO" />
	
	<!-- 수강신청 완료 목록 조회 -->
	<select id="selectReqst" parameterClass="str" resultClass="lctre_Search">
		SELECT * FROM SUBJCT_VIEW
		WHERE ST_STDNT_NO=#ST_STDNT_NO# order by RE_NO asc
	</select>

	<!-- 수강 신청 -->
	<update id="insertReqst" parameterClass="reqst">
		INSERT INTO REQST(re_No,re_Stdnt_No,re_Lctre_No)
		VALUES(REQ_SEQ.NEXTVAL,#re_Stdnt_No#,#re_Lctre_No#)
	</update>
	
	<!-- 수강 신청 취소 -->
	<update id="deleteReqst" parameterClass="int">
		delete from REQST where re_No=#re_No#
	</update>
	

</sqlMap>
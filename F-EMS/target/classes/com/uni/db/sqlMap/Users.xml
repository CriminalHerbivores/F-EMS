<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Users">
	<typeAlias alias="str" type="java.lang.String" />
	<typeAlias alias="int" type="java.lang.Integer" />
	<typeAlias alias="users" type="com.uni.fems.dto.UsersVO" />
	
	<select id="findId" parameterClass="users" resultClass="str">
		select username from member_view
		where nm = #name#
		and email = #email#
	</select>
	<select id="findPw" parameterClass="users" resultClass="str">
		select username from member_view
		where nm = #name#
		and email = #email#
		and username = #id#
	</select>
</sqlMap>
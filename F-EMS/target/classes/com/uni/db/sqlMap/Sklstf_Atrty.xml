<sqlMap namespace="Sklstf_Atrty">
	<typeAlias alias = "sklstf_Atrty" type="com.uni.fems.dto.Sklstf_AtrtyVO" />
	
		<!-- 관리자의 직원 권한 등록 -->
	<update id="insertSklstf_Atrty" parameterClass="sklstf_Atrty">
		insert into Sklstf_Atrty(sa_Sklstf_No,sa_Atrty)
		values(#sa_Sklstf_No#,#sa_Atrty#)
	</update>
	
		<!-- 관리자의 직원 권한 수정 -->
	<update id="updateSklstf_Atrty" parameterClass="sklstf_Atrty">
		update Sklstf_Atrty set sa_Sklstf_No=#sa_Sklstf_No#,sa_Atrty=#sa_Atrty#
		where sa_Sklstf_No=#sa_Sklstf_No#
	</update>
	
		<!-- 전체 직원 인원수 -->
	<select id="numOfSklstf" parameterClass="sklstf_Atrty" resultClass="int">
		select count(*) from sklstf_Atrty
	</select>
	
</sqlMap>